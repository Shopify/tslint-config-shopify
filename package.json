{
  "name": "tslint-config-shopify",
  "version": "1.1.5",
  "description": "Shopify's baseline TSLint config.",
  "keywords": [
    "tslint",
    "tslintconfig",
    "tslintplugin",
    "tslint-config",
    "tslint-config-shopify",
    "shopify"
  ],
  "files": [
    "dist/"
  ],
  "main": "./dist/index.js",
  "scripts": {
    "prepublish": "yarn run build",
    "build": "yarn run clean && tsc",
    "clean": "rimraf dist",
    "test": "yarn run check",
    "lint:ts": "yarn run build && tslint -c ./dist/index.js './src/**/*.{ts,tsx}' --project ./tsconfig.json --type-check",
    "check": "yarn run lint:js && yarn run lint:ts"
  },
  "homepage": "https://github.com/Shopify/tslint-config-shopify#readme",
  "repository": "https://github.com/Shopify/tslint-config-shopify",
  "author": "Shopify <dev@shopify.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Shopify/tslint-config-shopify/issues"
  },
  "devDependencies": {
    "@types/node": "^7.0.5",
    "rimraf": "^2.6.0",
    "tslint": "4.3.x",
    "typescript": "^2.1.6"
  },
  "peerDependencies": {
    "tslint": "4.3.x"
  },
  "dependencies": {
    "merge": "1.x",
    "tslint-react": "2.3.x"
  }
}
